{
    "compilerOptions": {
        "allowJs": false,
        "lib": ["dom"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "target": "es6",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "pretty": true,
        "strict": true,
        "sourceMap": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "declaration": false,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
    },
    "include": ["src/**/*"],
    "exclude": ["tmp/**/*", "node_modules"],
    "compileOnSave": false
}
